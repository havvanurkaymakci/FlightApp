@model FlightApp.Models.Passenger

@{
    ViewData["Title"] = "Create";
}


<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">

<script src="js/vendor/modernizr-2.8.3-respond-1.4.2.min.js"></script>


<h4>Yolcu Bilgilerini Giriniz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PassengerName" class="control-label"></label>
                <input asp-for="PassengerName" class="form-control" />
                <span asp-validation-for="PassengerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerSurname" class="control-label"></label>
                <input asp-for="PassengerSurname" class="form-control" />
                <span asp-validation-for="PassengerSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>
                    <input type="radio" asp-for="passengerGender" name="passengerGender" value="erkek"> Erkek
                </label>
                <label>
                    <input type="radio" asp-for="passengerGender" name="passengerGender" value="kadın"> Kadın
                </label>
                <span asp-validation-for="passengerGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TCNumber" class="control-label"></label>
                <input asp-for="TCNumber" class="form-control" />
                <span asp-validation-for="TCNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserMail" class="control-label"></label>
                <input asp-for="UserMail" class="form-control" />
                <span asp-validation-for="UserMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPhone" class="control-label"></label>
                <input asp-for="UserPhone" class="form-control" />
                <span asp-validation-for="UserPhone" class="text-danger"></span>
            </div>
            <hr />
            <br />
            <div>
                <table>
                    <tr>
                        <td>
                            <input type="hidden" name="flightId" value="@ViewData["flightId"]" />

                            <input type="submit" value="yolcu bilgilerini kaydet" class="btn btn-primary" />
                            <a asp-action="Create" asp-controller="Payment" class="btn btn-secondary">Ödeme işlemine geç</a>
                        </td>
                    </tr>


                </table>
            </div>
        </form>
    </div>
</div>
<h5 style="color:blue;">@TempData["onayMesaji"]</h5>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
